#:import AddProductToOrder components.orders.addProductToOrder

<AddProductToOrder>:
    GridLayout:
        cols:1
        rows:2
        size_hint_y:None
        height:self.minimum_height
        GridLayout:
            id:product_search
            rows:1
            cols:1
            size_hint_y:None
            height:self.minimum_height
            MDTextField:
                id:search_input
                icon_type:"left"
                icon_left:"magnify"
                #mode:"round"
                #size_hint:(.1, None)
                #pos_hint:{"center_x": .5}
                helper_text:"Escribe algo y presiona enter para buscar..."
                helper_text_mode:"persistent"
                line_color_focus:"#E9192F"
                hint_text_color_normal:"#E9192F"
                hint_text_color_focus:"#E9192F"
                icon_left_color_focus:"#E9192F"
                text_color_focus:"#E9192F"
                text_color_normal:"#E9192F"
                on_text_validate:root.searchProducts(self.text)
           
        GridLayout:
            cols:2
            rows:4
            spacing:"20dp"
            size_hint_y:None
            height:self.minimum_height
            MDTextField:
                id:code
                mode: "fill"
                hint_text: "CÃ³digo"
                disabled:True
            MDTextField:
                id:name_product
                mode: "fill"
                hint_text: "Nombre"
                disabled:True
            MDTextField:
                id:quantity
                mode: "fill"
                hint_text: "Cantidad"
                helper_text:"Presione enter para calcular"
                helper_text_mode:"persistent"
                on_text_validate: root.calcTotalIVAAndTotal()
            MDTextField:
                id:price_u
                mode: "fill"
                hint_text: "Precio U."
                disabled:True
            MDTextField:
                id:IVA
                mode: "fill"
                hint_text: "IVA"
                text:"16"
                disabled:True
            MDTextField:
                id:total_iva
                mode: "fill"
                hint_text: "Monto IVA"
                disabled:True
            MDTextField:
                id:total
                mode: "fill"
                hint_text: "Total"
                disabled:True
